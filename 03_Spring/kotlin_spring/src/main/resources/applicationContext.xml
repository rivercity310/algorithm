<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.example.kotlin_spring.polymorphism"></context:component-scan>
    <bean id="samsungTV" class="com.example.kotlin_spring.polymorphism.tv.SamsungTV" init-method="initMethod" destroy-method="destroyMethod">
        <constructor-arg ref="apple"></constructor-arg>
        <constructor-arg value="3000000"></constructor-arg>
    </bean>

    <bean id="lgTV" class="com.example.kotlin_spring.polymorphism.tv.LgTV">
        <property name="speaker" ref="sony" />
        <property name="price" value="2300000" />
    </bean>

    <bean id="apple" class="com.example.kotlin_spring.polymorphism.speaker.AppleSpeaker"/>
    <bean id="sony" class="com.example.kotlin_spring.polymorphism.speaker.SonySpeaker" />

</beans>